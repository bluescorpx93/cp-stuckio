<p id="notice"><%= notice %></p>

<div class='col-md-4'>
<h1>To Do </h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tasks_todo %>
  </tbody>
</table>
</div>

<div class='col-md-4'>
<h1>Doing </h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
   <%= render @tasks_doing %>
  </tbody>
</table>
</div>

<div class='col-md-4'>
<h1>Done </h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>State</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tasks_done %>
  </tbody>
</table>
</div>

<%= link_to 'New Task', new_task_path %>
