<div class='col-md-4 pull-left'>
	<h2 class='text-center'>Sign up</h2>
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.error_notification %>
		<%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
		<%= f.input :password, required: true, label:false, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
		<%= f.input :password_confirmation, placeholder: "Confirm Password", required: true, label: false %>
		<%= f.button :submit, "Sign up", class:'btn btn-block btn-primary' %>
	<% end %>
	<%= render "devise/shared/links" %>
</div>

<div class='col-md-4 pull-right'>
<%= render 'signup' %>
</div>